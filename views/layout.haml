!!! Strict
%html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='en' lang='en')

  %head
    %meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    %title= "#{"#{@article.title} | " if @single_view }hughevans.net"
    %link(href='/screen.css' media='screen' rel='stylesheet' type='text/css')
    %link(rel='shortcut icon' href='/favicon.ico')
    %link(rel='alternate' href='/articles.atom' title='@hughevans - Ruby, Art and All things...' type='application/atom+xml')
    %link(href='http://fonts.googleapis.com/css?family=Copse' rel='stylesheet' type='text/css')
    %script(src='/javascripts/code_highlighter.js' type='text/javascript')
    %script(src='http://www.google-analytics.com/ga.js' type='text/javascript')
    
  %body
    #main
      .wrapper
        #header
          %h1
            %a(href='/') @hughevans
        = yield

    #footer
      .wrapper
        %strong
          my other stuff on the web
        %ul
          %li
            %a(href='http://twitter.com/hughevans') twitter
          %li
            %a(href='http://flickr.com/photos/hughevans/') flickr
          %li
            %a(href='http://github.com/hughevans') github

    :javascript
      try {
        var pageTracker = _gat._getTracker("UA-7674685-1");
        pageTracker._trackPageview();
      } catch(err) {};
